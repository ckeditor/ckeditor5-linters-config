{
  "name": "@ckeditor/ckeditor5-linters-config",
  "version": "0.0.1",
  "author": "CKSource (http://cksource.com/)",
  "license": "MIT",
  "homepage": "https://ckeditor.com/ckeditor-5",
  "keywords": [
    "ckeditor",
    "ckeditor5",
    "ckeditor 5"
  ],
  "private": true,
  "scripts": {
    "lint": "eslint --quiet \"**/*.js\"",
    "stylelint": "stylelint --quiet --allow-empty-input \"./packages/stylelint-plugin-ckeditor5-rules/style.css\" --fix",
    "precommit": "lint-staged",
    "changelog": "node ./scripts/changelog.js",
    "release:bump-version": "node ./scripts/bump-version.js",
    "release:publish": "node ./scripts/publish.js",
    "test": "jest && node packages/eslint-plugin-ckeditor5-rules/tests/index.js"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ckeditor/ckeditor5-linters-config.git"
  },
  "devDependencies": {
    "@ckeditor/ckeditor5-dev-env": "^28.1.1",
    "eslint": "^7.0.0",
    "jest": "^27.5.1",
    "jest-preset-stylelint": "^5.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-ckeditor5": "^2.0.1"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --quiet"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintIgnore": [
    "coverage/**",
    "packages/*/node_modules/**"
  ],
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/husky"
    ]
  },
  "jest": {
    "preset": "jest-preset-stylelint"
  }
}
