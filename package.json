    "@inquirer/prompts": "^7.5.0",
    "@listr2/prompt-adapter-inquirer": "^2.0.16",
    "eslint": "^9.26.0",
    "eslint-config-ckeditor5": "^10.0.0",
    "eslint-plugin-ckeditor5-rules": "^10.0.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "listr2": "^8.0.0"
  },
  "lint-staged": {
