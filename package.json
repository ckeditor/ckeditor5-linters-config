{
  "name": "@ckeditor/ckeditor5-linters-config",
  "version": "4.4.0",
  "author": "CKSource (http://cksource.com/)",
  "license": "MIT",
  "homepage": "https://ckeditor.com/ckeditor-5",
  "keywords": [
    "ckeditor",
    "ckeditor5",
    "ckeditor 5"
  ],
  "private": true,
  "scripts": {
    "postinstall": "node ./scripts/postinstall.js",
    "lint": "eslint --quiet \"**/*.js\"",
    "precommit": "lint-staged",
    "changelog": "node ./scripts/changelog.js",
    "release:prepare-packages": "node ./scripts/preparepackages.js",
    "release:publish-packages": "node ./scripts/publishpackages.js",
    "test": "node ./scripts/test-packages.js",
    "clean": "npx rimraf package-lock.json yarn.lock ./**/node_modules",
    "reinstall": "yarn run clean && yarn install"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=8.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ckeditor/ckeditor5-linters-config.git"
  },
  "devDependencies": {
    "@ckeditor/ckeditor5-dev-bump-year": "^38.0.0",
    "@ckeditor/ckeditor5-dev-ci": "^38.0.0",
    "@ckeditor/ckeditor5-dev-release-tools": "^38.0.0",
    "eslint": "^7.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.0",
    "listr2": "^6.5.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --quiet"
    ]
  },
  "eslintIgnore": [
    "coverage/**",
    "packages/*/node_modules/**"
  ],
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
